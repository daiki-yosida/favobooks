<div class="row">
  <div class="col-sm-4">
    <div>
      <%= image_tag @user.image.url %>
    </div>
    <div>
      <h3><%= @user.name %></h3>
    </div>
    <% if current_user == @user  %>
      <%= link_to 'プロフィール編集', edit_user_path, class: "btn btn-primary btn-sm" %>
    <% else %>
      <%= render 'relationships/follow_button', user: @user %>
    <% end %>
 </div>

 <div class="col-sm-8">
  <ul class="nav nav-tabs nav-justified mb-3">
    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿一覧</a></li>
    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー</a></li>
    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー</a></li>
    <li class='nav-item'><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %> ">お気に入り</a></li>
  </ul>
  <%= render 'users', users: @followings %>
 </div>
</div>